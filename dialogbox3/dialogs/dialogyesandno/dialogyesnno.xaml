<UserControl x:Class="dialogbox3.dialogs.dialogyesandno.dialogyesnno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dialogbox3.dialogs.dialogyesandno"
             mc:Ignorable="d" 
             
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Button Command="{Binding YesCommand}" Content="Yes" HorizontalAlignment="Left" Margin="135,70,0,0" VerticalAlignment="Top" Width="75" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        <Button Command="{Binding NoCommand}" Content="No" HorizontalAlignment="Left" Margin="215,70,0,0" VerticalAlignment="Top" Width="75" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

    </Grid>
</UserControl>
